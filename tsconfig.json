{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "ES2022",                    
    "lib": ["es6", "DOM"],                     
    "allowJs": true,
    "outDir": "javascript",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "jsx": "react",
    "jsxFactory": "React.createElement",
  }
}